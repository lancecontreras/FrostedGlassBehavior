<Page x:Class="Sample.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:FGB="using:FrostedGlassBehavior"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:Sample"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
  <Grid>
    <Grid.Background>
      <ImageBrush ImageSource="ms-appx:///Assets/bw.jpeg" />
    </Grid.Background>
    <Grid.Resources>
      <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
      </Style>
    </Grid.Resources>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border Width="300"
            Height="300"
            HorizontalAlignment="Center"
            CornerRadius="5"
            VerticalAlignment="Center">
      <i:Interaction.Behaviors>
        <FGB:FrostedGlassBehavior />
      </i:Interaction.Behaviors>
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <Border.Background>
          <SolidColorBrush Opacity=".6"
                           Color="Black" />
        </Border.Background>
        <TextBlock Text="Hello World" Foreground="White"/>
      </Border>
    </Border>
    <Border Width="300" Grid.Row="0" Grid.Column="1"
            Height="300"
            HorizontalAlignment="Center"
            CornerRadius="5"
            VerticalAlignment="Center">
      <i:Interaction.Behaviors>
        <FGB:FrostedGlassBehavior />
      </i:Interaction.Behaviors>
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <Border.Background>
          <SolidColorBrush Opacity=".6"
                           Color="White" />
        </Border.Background>
        <TextBlock Text="Hello World" />
      </Border>
    </Border>
    
    <Border Width="300" Grid.Row="1" Grid.Column="1"
            Height="300"
            HorizontalAlignment="Center"
            CornerRadius="5"
            VerticalAlignment="Center">
      <i:Interaction.Behaviors>
        <FGB:FrostedGlassBehavior />
      </i:Interaction.Behaviors>
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <Border.Background>
          <SolidColorBrush Opacity=".6"
                           Color="DodgerBlue" />
        </Border.Background>
        <TextBlock Text="Hello World" Foreground="White"/>
      </Border>
    </Border>

    <Border Width="300" Grid.Row="1" Grid.Column="0"
            Height="300"
            HorizontalAlignment="Center"
            CornerRadius="5"
            VerticalAlignment="Center">
      <i:Interaction.Behaviors>
        <FGB:FrostedGlassBehavior />
      </i:Interaction.Behaviors>
      <Border HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <Border.Background>
          <SolidColorBrush Opacity=".6"
                           Color="Green" />
        </Border.Background>
        <TextBlock Text="Hello World" Foreground="White"/>
      </Border>
    </Border>
  </Grid>
</Page>

